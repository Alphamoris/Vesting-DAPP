@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 221.2 83.2% 53.3%;
    --radius: 0.5rem;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 84% 4.9%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 94.1%;
  }
}

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    background-color: white;
    color: #111827;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}

@layer components {
  .oggy-character {
    @apply w-20 h-20 rounded-full bg-gradient-to-br from-orange-400 via-orange-500 to-orange-600 relative shadow-xl;
    background-image: 
      radial-gradient(circle at 30% 30%, rgba(255,255,255,0.8) 0%, transparent 20%),
      radial-gradient(circle at 70% 30%, rgba(255,255,255,0.8) 0%, transparent 20%),
      radial-gradient(circle at 50% 60%, rgba(0,0,0,0.9) 0%, transparent 15%);
    animation: float 3s ease-in-out infinite;
  }

  .oggy-character::before {
    content: "üê±";
    @apply absolute inset-0 flex items-center justify-center text-2xl;
    animation: bounce 2s infinite;
  }

  .cockroach-character {
    @apply w-16 h-16 rounded-full bg-gradient-to-br from-gray-800 via-gray-900 to-black relative shadow-lg;
    background-image: 
      radial-gradient(circle at 35% 25%, rgba(255,255,255,0.6) 0%, transparent 15%),
      radial-gradient(circle at 65% 25%, rgba(255,255,255,0.6) 0%, transparent 15%);
    animation: float 2s ease-in-out infinite reverse;
  }

  .cockroach-character::before {
    content: "ü™≥";
    @apply absolute inset-0 flex items-center justify-center text-xl;
    animation: wiggle 1.5s ease-in-out infinite;
  }

  .oggy-gradient {
    @apply bg-gradient-to-r from-orange-400 via-orange-500 to-orange-600 bg-clip-text text-transparent;
    background-size: 300% 300%;
    animation: gradient-shift 3s ease infinite;
  }

  .cockroach-gradient {
    @apply bg-gradient-to-r from-gray-600 via-gray-800 to-black bg-clip-text text-transparent;
    background-size: 300% 300%;
    animation: gradient-shift 3s ease infinite reverse;
  }

  .solana-gradient {
    @apply bg-gradient-to-r from-purple-500 via-blue-500 to-green-400 bg-clip-text text-transparent;
    background-size: 400% 400%;
    animation: rainbow-shift 4s ease infinite;
  }

  .comic-speech-bubble {
    @apply relative bg-white border-4 border-gray-800 rounded-3xl p-6 shadow-2xl;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  }

  .comic-speech-bubble::before {
    content: "";
    @apply absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-0 h-0;
    border: 16px solid transparent;
    border-top-color: #1f2937;
  }

  .comic-speech-bubble::after {
    content: "";
    @apply absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-0 h-0;
    border: 14px solid transparent;
    border-top-color: #ffffff;
  }

  .cartoon-btn {
    @apply inline-flex items-center px-6 py-3 rounded-full font-bold text-white transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg;
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
    border: 3px solid #1f2937;
    box-shadow: 
      0 4px 0 #b45309,
      0 8px 20px rgba(0,0,0,0.3);
  }

  .cartoon-btn:hover {
    box-shadow: 
      0 6px 0 #b45309,
      0 12px 25px rgba(0,0,0,0.4);
    transform: translateY(-2px) scale(1.05);
  }

  .cartoon-btn:active {
    box-shadow: 
      0 2px 0 #b45309,
      0 4px 10px rgba(0,0,0,0.2);
    transform: translateY(2px) scale(0.95);
  }

  .chaos-card {
    @apply relative bg-gradient-to-br from-white via-gray-50 to-gray-100 border-4 border-gray-800 rounded-2xl shadow-2xl overflow-hidden;
    transform-style: preserve-3d;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .chaos-card::before {
    content: "";
    @apply absolute inset-0 bg-gradient-to-br from-transparent via-white/10 to-transparent opacity-0 transition-opacity duration-300;
    background-size: 200% 200%;
    animation: shimmer-chaos 3s linear infinite;
  }

  .chaos-card:hover {
    transform: translateY(-8px) rotateX(5deg) rotateY(5deg);
    box-shadow: 
      0 20px 40px rgba(0,0,0,0.2),
      0 0 0 1px rgba(255,255,255,0.5) inset;
  }

  .chaos-card:hover::before {
    opacity: 1;
  }

  .floating-element {
    animation: float 4s ease-in-out infinite;
  }

  .bouncing-element {
    animation: bounce 2s infinite;
  }

  .wiggling-element {
    animation: wiggle 1s ease-in-out infinite;
  }

  .glitch-text {
    @apply relative;
    animation: glitch 2s infinite;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    @apply absolute top-0 left-0 w-full h-full;
  }

  .glitch-text::before {
    animation: glitch-1 2s infinite;
    color: #ff00ff;
    z-index: -1;
  }

  .glitch-text::after {
    animation: glitch-2 2s infinite;
    color: #00ffff;
    z-index: -2;
  }

  .neon-glow {
    @apply text-white;
    text-shadow: 
      0 0 5px currentColor,
      0 0 10px currentColor,
      0 0 15px currentColor,
      0 0 20px currentColor;
    animation: neon-pulse 2s ease-in-out infinite alternate;
  }

  .money-rain {
    @apply absolute inset-0 pointer-events-none overflow-hidden;
  }

  .money-rain::before {
    content: "üí∞ üíé ü™ô üíµ üí∞ üíé ü™ô üíµ üí∞ üíé ü™ô üíµ";
    @apply absolute -top-10 left-0 right-0 text-2xl opacity-30;
    animation: rain 10s linear infinite;
  }

  .oggy-container {
    @apply relative overflow-hidden rounded-3xl;
    background: 
      radial-gradient(circle at 20% 20%, rgba(251, 146, 60, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(79, 70, 229, 0.3) 0%, transparent 50%),
      linear-gradient(135deg, #fef3c7 0%, #fde68a 50%, #f59e0b 100%);
  }

  .cockroach-zone {
    @apply relative;
    background: 
      radial-gradient(circle at 30% 70%, rgba(31, 41, 55, 0.8) 0%, transparent 50%),
      radial-gradient(circle at 70% 30%, rgba(55, 65, 81, 0.6) 0%, transparent 50%),
      linear-gradient(225deg, #374151 0%, #1f2937 50%, #111827 100%);
  }

  .stats-counter {
    @apply text-4xl font-bold bg-gradient-to-r from-green-400 to-blue-500 bg-clip-text text-transparent;
    animation: count-up 2s ease-out;
  }

  .feature-spotlight {
    @apply relative overflow-hidden;
  }

  .feature-spotlight::before {
    content: "";
    @apply absolute -inset-1 bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 rounded-2xl opacity-75 blur-lg;
    animation: spin-slow 6s linear infinite;
  }

  .pulse-ring {
    @apply absolute inset-0 rounded-full border-4 border-white/30;
    animation: pulse-ring 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) infinite;
  }

  .cartoon-card {
    @apply chaos-card;
  }

  .stats-card {
    @apply chaos-card p-6;
  }

  .cartoon-btn-secondary {
    @apply inline-flex items-center justify-center px-4 py-2 rounded-full font-bold text-gray-800 bg-white border-4 border-gray-800 transition-all duration-300 transform hover:scale-105 active:scale-95 shadow-lg hover:shadow-xl;
  }

  .cartoon-progress {
    @apply bg-gray-200 rounded-full h-2 overflow-hidden;
  }

  .fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
  }
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  25% { transform: translateY(-10px) rotate(1deg); }
  50% { transform: translateY(-20px) rotate(0deg); }
  75% { transform: translateY(-10px) rotate(-1deg); }
}

@keyframes wiggle {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(1deg); }
  75% { transform: rotate(-1deg); }
}

@keyframes gradient-shift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

@keyframes rainbow-shift {
  0% { background-position: 0% 50%; }
  25% { background-position: 50% 0%; }
  50% { background-position: 100% 50%; }
  75% { background-position: 50% 100%; }
  100% { background-position: 0% 50%; }
}

@keyframes shimmer-chaos {
  0% { background-position: -200% -200%; }
  100% { background-position: 200% 200%; }
}

@keyframes glitch {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
}

@keyframes glitch-1 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(-1px, 1px); }
  40% { transform: translate(-1px, -1px); }
  60% { transform: translate(1px, 1px); }
  80% { transform: translate(1px, -1px); }
}

@keyframes glitch-2 {
  0%, 100% { transform: translate(0); }
  20% { transform: translate(1px, -1px); }
  40% { transform: translate(1px, 1px); }
  60% { transform: translate(-1px, -1px); }
  80% { transform: translate(-1px, 1px); }
}

@keyframes neon-pulse {
  0% { 
    text-shadow: 
      0 0 5px currentColor,
      0 0 10px currentColor,
      0 0 15px currentColor,
      0 0 20px currentColor;
  }
  100% { 
    text-shadow: 
      0 0 10px currentColor,
      0 0 20px currentColor,
      0 0 30px currentColor,
      0 0 40px currentColor;
  }
}

@keyframes rain {
  0% { transform: translateY(-100px); }
  100% { transform: translateY(100vh); }
}

@keyframes count-up {
  0% { transform: scale(0.5) rotate(-10deg); opacity: 0; }
  50% { transform: scale(1.2) rotate(5deg); }
  100% { transform: scale(1) rotate(0deg); opacity: 1; }
}

@keyframes spin-slow {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse-ring {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(2); opacity: 0; }
}

@keyframes fadeInUp {
  0% { 
    opacity: 0; 
    transform: translateY(30px); 
  }
  100% { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

.banking-hero {
  background: 
    radial-gradient(circle at 10% 20%, rgba(251, 146, 60, 0.3) 0%, transparent 20%),
    radial-gradient(circle at 80% 80%, rgba(16, 185, 129, 0.3) 0%, transparent 20%),
    radial-gradient(circle at 40% 40%, rgba(139, 92, 246, 0.2) 0%, transparent 30%),
    linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.vesting-section {
  background: 
    radial-gradient(circle at 70% 30%, rgba(236, 72, 153, 0.3) 0%, transparent 25%),
    radial-gradient(circle at 30% 70%, rgba(59, 130, 246, 0.3) 0%, transparent 25%),
    linear-gradient(225deg, #fdf4ff 0%, #f3e8ff 100%);
}

.staking-zone {
  background: 
    radial-gradient(circle at 50% 50%, rgba(34, 197, 94, 0.4) 0%, transparent 30%),
    radial-gradient(circle at 20% 80%, rgba(168, 85, 247, 0.3) 0%, transparent 25%),
    linear-gradient(45deg, #ecfdf5 0%, #d1fae5 100%);
}

.mobile-optimized {
  @apply transition-all duration-300 ease-out;
}

@media (max-width: 768px) {
  .oggy-character {
    @apply w-16 h-16;
  }
  
  .cockroach-character {
    @apply w-12 h-12;
  }
  
  .comic-speech-bubble {
    @apply p-4 text-lg;
  }
  
  .cartoon-btn {
    @apply px-4 py-2 text-sm;
  }
}

.responsive-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

@media (max-width: 640px) {
  .responsive-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
}
